@page "/todos"

<PageTitle>Todos</PageTitle>

<h1>Todos</h1>

<UseGetTodoItems Context="result">
    <ChildContent>
        <ul>
            @foreach (var item in result.TodoItems!)
            {
                <li>{@item!.Title}</li>
            }
        </ul>
    </ChildContent>
    <ErrorContent>
        Something went wrong ...<br />
        @result.First().Message
    </ErrorContent>
    <LoadingContent>
        Loading ...
    </LoadingContent>
</UseGetTodoItems>

